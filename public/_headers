# Cache strategy per Cloudflare Pages
# Ottimizzato per massimizzare cache hit ratio (target 80%+)

# Assets statici con hash - cache immutable 1 anno
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript e CSS bundle con hash - cache 1 anno
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css

# Font files - cache 1 anno
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Immagini in assets - cache 1 anno (hanno hash)
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Immagini nella root - cache 1 mese
/*.png
  Cache-Control: public, max-age=2592000
/*.jpg
  Cache-Control: public, max-age=2592000
/*.jpeg
  Cache-Control: public, max-age=2592000
/*.gif
  Cache-Control: public, max-age=2592000
/*.webp
  Cache-Control: public, max-age=2592000
/*.svg
  Cache-Control: public, max-age=2592000
/*.ico
  Cache-Control: public, max-age=2592000

# JSON data files - cache 1 ora (possono cambiare con deploy)
/data/*.json
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/json

# Modelli JSON nelle cartelle - cache 1 ora
/data/models/*/*.json
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/json

# Markdown files - cache 1 ora
/data/models/*/*.md
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: text/markdown

# Blog posts JSON - cache 1 ora
/data/blog-posts/*/*.json
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/json

# HTML pages - cache breve con revalidation
/*.html
  Cache-Control: public, max-age=300, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Root index.html - cache 5 minuti
/index.html
  Cache-Control: public, max-age=300, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY

# Service worker - no cache (deve aggiornarsi subito)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - cache 1 giorno
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

/site.webmanifest
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

# Robots e sitemap - cache 1 giorno
/robots.txt
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=86400

# Favicon - cache 1 settimana
/favicon.ico
  Cache-Control: public, max-age=604800

# Security headers per tutte le pagine
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-XSS-Protection: 1; mode=block
